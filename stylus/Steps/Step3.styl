.Step3
	width 600px 
	margin 0 auto
	@media screen and (max-width: 771px)
		width 300px 
	form
		margin-bottom 66px 
	.row
		height 50px
		width 100% 
		@media screen and (max-width: 771px)
			height 70px  
	legend 
		legend-positioning()
		margin-left 150px
		@media screen and (max-width: 771px) 
			margin-left 0px 
	label
		cursor pointer
		line-height 30px 
		@media screen and (max-width: 771px)
			line-height 15px 
	input[type="checkbox"]
		margin-left 150px
		background white 
		cursor pointer
		position relative
		outline none
		&:after
			content " "
			position absolute
			width 10px  
			height 10px 
			background white
			color white
			border-radius 1px
			border 1px solid #B8B8B8
			display inline-block
			visibility visible 
			transition all 300ms
		&:checked:after
			content "âœ”"
			top 0px
			left 0px 
			width 12px
			height 12px  
			border-radius 2px 
			font-weight 500
			font-size 10px
			text-indent 2px 
			line-height 11px 
			border none  
			color white
			background #3B99FC 
		@media screen and (max-width: 771px)
			margin-left 0px 
			float left
	input[type="text"]
		reset-default-input-styles()
		box-shadow()
		border-radius()
		display none
		float right
		width 265px 
		padding 5px
		padding-left 10px
		outline none
		@media screen and (max-width: 771px)
			float left
	.ShowPattern
		display none
		margin-left 150px 
		color #ff0000
		@media screen and (max-width: 771px)
			margin-left 0px 
			